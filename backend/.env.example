# Webhook Configuration
# Discord Webhook URL (opcional) - Para notificações no Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Telegram Bot Configuration (opcional) - Para notificações no Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Email Configuration (opcional) - Para envio de emails
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# WhatsApp API Configuration (opcional) - Para integração com WhatsApp
WHATSAPP_API_URL=https://api.whatsapp.com/v1
WHATSAPP_API_TOKEN=your_whatsapp_token

# CRM Integration (opcional) - Para integração com CRMs
HUBSPOT_API_KEY=your_hubspot_api_key
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret

# Google Sheets Integration (opcional) - Para salvar em planilhas
GOOGLE_SHEETS_ID=your_google_sheets_id
GOOGLE_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# Supabase Configuration
SUPABASE_URL=https://YOUR-PROJECT.supabase.co
SUPABASE_KEY=sb_publishable_xxx
# Optional: use service role only in backend
SUPABASE_SERVICE_ROLE_KEY=service_role_xxx

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_characters
JWT_EXPIRES_IN=24h

# Admin Login Configuration
ADMIN_LOGIN_MAX_ATTEMPTS=5
ADMIN_LOGIN_BLOCK_TIME=15

# Server Configuration
PORT=3001
NODE_ENV=development

# Admin Master Password (for admin registration protection)
ADMIN_MASTER_PASSWORD=altere_esta_senha_mestre
